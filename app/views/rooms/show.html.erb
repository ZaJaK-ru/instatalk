<h1>Room <%= @room.id %></h1>

<div class="btn-group" role="group">
  <%= link_to "Leave room", root_path, class: "btn btn-info" %>
  <% if current_user == @room.user %>
    <%= link_to "Delete room", room_path(@room.token), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete the room?" } %>
  <% end %>
</div>

<p id="notice"><%= notice %></p>

<div class="messages">
  <div class="messages-inner" id="messages" data-room-id="<%= @room.id %>">
    <%= render @room.messages %>
  </div>
</div>

<%= render 'messages/form' %>
